<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaCo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PizzaCo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Order Pizzas!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Home">Customer Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="SignIn">Sign In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <section class="row">
            <header>
                <h2>Customize Your Pizza!</h2>
                <h3>Any topping under the sun!</h3>
            </header>
            <ul class="row">
                <li class="col col-2">
                    <figure>
                        <img src="http://placekitten.com/200/300" alt="pizza with extra extra Pineapples" /></li>
                        <figcaption>Pineapples!</figcaption>
                    </figure>
                <li class="col col-2">
                    <figure>
                        <img src="http://placekitten.com/200/300" alt="pizza with extra extra Mushrooms" />
                        <figcaption>Mushrooms!</figcaption>
                    </figure>
                </li>
                <li class="col col-2">
                    <figure>
                        <img src="http://placekitten.com/200/300" alt="pizza with extra extra Calamari" />
                        <figcaption>Calamari!</figcaption>
                    </figure>
                </li>
                <li class="col col-2">
                    <figure>
                        <img src="http://placekitten.com/200/300" alt="pizza with extra extra Curry Powder" />
                        <figcaption>Gold Dust?!</figcaption>
                    </figure>
                </li>
                <li class="col col-2">
                    <figure>
                        <img src="http://placekitten.com/200/300" alt="pizza with extra extra ?!?!?!" />
                        <figcaption>I don't even know! But we've got it!</figcaption>
                    </figure>
                </li>
            </ul>
        </section>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Elliot Reid's PizzaBox - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
